generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

// npx prisma db push

model User {
    id        String   @id @default(auto()) @map("_id") @db.ObjectId
    email     String   @unique
    username  String   @unique
    password  String
    avatar    String?
    name      String?
    createdAt DateTime @default(now())
    Post      Post[]
}

model Post {
    id          String       @id @default(auto()) @map("_id") @db.ObjectId
    user        User         @relation(fields: [userId], references: [id])
    imageUrl    String?
    bedroom     Int
    bathroom    Int
    address     String
    city        String
    latitude    String
    longitude   String
    createdAt   DateTime     @default(now())
    userId      String       @db.ObjectId
    title       String
    price       Int
    property    Property
    PostDetails PostDetails?
}

enum Property {
    apartment
    fullFurnished
}

enum type {
    buy
    rent
}

model PostDetails {
    id         String  @id @default(auto()) @map("_id") @db.ObjectId
    desc       String?
    utilities  String?
    pet        String?
    income     String?
    size       String?
    schoolbus  String?
    restaurant String?
    post       Post    @relation(fields: [postId], references: [id])
    postId     String  @unique @db.ObjectId
}
